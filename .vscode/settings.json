{
  "editor.tabSize": 2,
  "editor.formatOnSave": true,
  "editor.copyWithSyntaxHighlighting": false,
  "solidity.formatter": "forge",
  "standard.autoFixOnSave": true,
  "javascript.suggestionActions.enabled": false,
  "terminal.integrated.scrollback": 50000,
  "[javascript]": {
    "editor.formatOnSave": false,
    "editor.defaultFormatter": "standard.vscode-standard"
  },
  "cSpell.words": [
    "Aquavallo",
    "ARBISCAN",
    "Arbitrum",
    "basegoerli",
    "bignumber",
    "defi",
    "divu",
    "Gargantuworm",
    "genhtml",
    "IERC",
    "Keccak",
    "lcov",
    "Merkle",
    "merkletreejs",
    "mulu",
    "nomicfoundation",
    "nomiclabs",
    "Sabersquatch",
    "Salacia",
    "tokenholder",
    "zerox"
  ],
  "todohighlight.include": [
    "**/*.sol",
    "**/*.js",
    "**/*.jsx",
    "**/*.ts",
    "**/*.tsx",
    "**/*.html",
    "**/*.php",
    "**/*.css",
    "**/*.scss"
  ],
  "todohighlight.keywords": [
    {
      "text": "revert",
      "color": "#ffffff",
      "backgroundColor": "#ff2600",
      "isWholeLine": false,
      "overviewRulerColor": "#f5bcb3"
    },
    {
      "text": "throw",
      "color": "#ffffff",
      "backgroundColor": "#ff8873",
      "isWholeLine": false,
      "overviewRulerColor": "#f5bcb3"
    },
    {
      "text": "public",
      "color": "#ffffff",
      "backgroundColor": "#0061ff",
      "isWholeLine": false,
      "overviewRulerColor": "#f5bcb3"
    },
    {
      "text": "external",
      "color": "#ffffff",
      "backgroundColor": "#0061ff",
      "isWholeLine": false,
      "overviewRulerColor": "#f5bcb3"
    },
    {
      "text": "when",
      "color": "#ffffff",
      "backgroundColor": "#0061ff",
      "isWholeLine": false,
      "overviewRulerColor": "#f5bcb3"
    },
    {
      "text": "only",
      "color": "#ffffff",
      "backgroundColor": "#0061ff",
      "isWholeLine": false,
      "overviewRulerColor": "#f5bcb3"
    },
    {
      "text": "function initialize",
      "color": "#000000",
      "isWholeLine": true,
      "backgroundColor": "#eaf3ff",
      "overviewRulerColor": "#f7e9d0"
    }
  ],
  "git.ignoredRepositories": [
    "./lib/openzeppelin-contracts",
    "./lib/openzeppelin-contracts-upgradeable",
    "./lib/forge-std",
  ],
  "cSpell.enableFiletypes": [
    "solidity"
  ]
}